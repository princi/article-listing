<p id="notice"><%= notice %></p>

<h1>Listing Articles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.name %></td>
        <td><%= article.description %></td>

      </tr>
    <% end %>
  </tbody>
</table>


<html>
<body>
  <div id="user_nav">
    <%if user_signed_in? %>

        <%= link_to 'Show' %> |
        <%= link_to 'Edit' %> |
        <%= link_to 'Destroy' %>

    <% else %>
         <%= link_to 'Show' %>

  <% end %>

  </div>
</body>
<%= link_to 'New Article', new_article_path %>
</html>
